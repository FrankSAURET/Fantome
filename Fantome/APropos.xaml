			<Border.BitmapEffect>
				<DropShadowBitmapEffect />
			</Border.BitmapEffect>
			<Border.BorderBrush>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF4059F7" Offset="0" />
					<GradientStop Color="#FF000A46" Offset="1" />
				</LinearGradientBrush>
			</Border.BorderBrush>
			<Image Source="/Images/okap.png" Margin="648,302,8,8" MouseUp="Image_MouseUp" RenderTransformOrigin="0.693,0.5" />
		</Border>
		<Image x:Name="image" HorizontalAlignment="Left" Height="382" VerticalAlignment="Top" Width="362" Source="/Images/Logo electropol 2 - 500.png" Grid.RowSpan="2" />
		<Image x:Name="image1" HorizontalAlignment="Left" Height="131" Margin="657,0,0,0" VerticalAlignment="Top" Width="135" Source="/Images/Fantome.ico" />
