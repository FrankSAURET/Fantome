				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF263AFD" Offset="0" />
					<GradientStop Color="#FF010749" Offset="0.998" />
				</LinearGradientBrush>
			</TextBox.Foreground>
		</TextBox>
		<TextBox x:Name="textBoxVersion2" HorizontalAlignment="Left" Height="34" Margin="322,173,0,0" TextWrapping="Wrap" Text="Version 2" VerticalAlignment="Top" Width="434" FontFamily="Candara" FontSize="20" FontWeight="ExtraBold" HorizontalContentAlignment="Right" BorderBrush="{x:Null}" SelectionOpacity="0" IsReadOnly="True" IsHitTestVisible="False">
