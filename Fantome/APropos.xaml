				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF263AFD" Offset="0" />
					<GradientStop Color="#FF010749" Offset="0.998" />
				</LinearGradientBrush>
			</TextBox.Foreground>
		</TextBox>
