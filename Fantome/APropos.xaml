			<TextBox.Foreground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF263AFD" Offset="0" />
					<GradientStop Color="#FF010749" Offset="0.998" />
				</LinearGradientBrush>
			</TextBox.Foreground>
		</TextBox>
		<Button x:Name="buttonLien" Content="www.electropol.fr" HorizontalAlignment="Left" Height="31" Margin="101,314,0,0" VerticalAlignment="Top" Width="237" FontFamily="Candara" FontSize="25" FontWeight="ExtraBold" Click="buttonLien_Click" Background="{x:Null}" BorderBrush="{x:Null}">
			<Button.Foreground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF263AFD" Offset="0" />
					<GradientStop Color="#FF010749" Offset="0.998" />
				</LinearGradientBrush>
