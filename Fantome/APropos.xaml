			</Label.Foreground>
		</Label>
		<Label x:Name="label2" Content="Codé par Frank SAURET     " HorizontalAlignment="Left" Height="37" Margin="34,379,0,0" VerticalAlignment="Top" Width="433" FontFamily="Sophie" FontSize="25" FontWeight="ExtraBold" FontStyle="Oblique">
			<Label.Foreground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF263AFD" Offset="0" />
					<GradientStop Color="#FF010749" Offset="0.998" />
				</LinearGradientBrush>
			</Label.Foreground>
		</Label>
		<TextBox x:Name="textBoxTitre" HorizontalAlignment="Left" Height="61" Margin="322,112,0,0" TextWrapping="Wrap" Text="Fantôme" VerticalAlignment="Top" Width="434" FontFamily="Candara" FontSize="60" FontWeight="ExtraBold" HorizontalContentAlignment="Center" BorderBrush="{x:Null}" IsHitTestVisible="False" IsReadOnly="True" SelectionOpacity="0">
